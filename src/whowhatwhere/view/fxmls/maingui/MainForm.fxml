<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<ScrollPane fx:id="scrollPaneMainForm" fitToHeight="false" fitToWidth="false" prefWidth="1205.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="whowhatwhere.controller.GUIController">
   <content>
      <BorderPane>
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="menuItemManageNotes" mnemonicParsing="false" text="Manage user notes" />
                        <MenuItem fx:id="menuItemMinimize" mnemonicParsing="false" text="Minimize to tray" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem fx:id="menuItemExit" mnemonicParsing="false" text="Exit" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Options">
                     <items>
                        <MenuItem fx:id="menuItemSelectNIC" mnemonicParsing="false" text="Select network adapter" />
                        <CheckMenuItem fx:id="menuItemChkCheckUpdateStartup" mnemonicParsing="false" text="Check for updates on startup" />
                        <CheckMenuItem fx:id="menuItemChkDisplayBalloon" mnemonicParsing="false" text="Display info balloon after minimizing" />
                        <CheckMenuItem fx:id="menuItemChkStartMinimized" mnemonicParsing="false" text="Start minimized" />
                        <Menu mnemonicParsing="false" text="Start with Windows">
                           <items>
                              <CheckMenuItem fx:id="menuItemChkAllUsers" mnemonicParsing="false" text="For all users" />
                              <CheckMenuItem fx:id="menuItemChkThisUserOnly" mnemonicParsing="false" text="For this user only" />
                           </items>
                        </Menu>
                     </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                        <MenuItem fx:id="menuItemUpdate" mnemonicParsing="false" text="Check for updates" />
                    <MenuItem fx:id="menuItemAbout" mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
              <tabs>
                <Tab fx:id="tabWWW" closable="false" text="Who What Where">
                	<!--<content><fx:include fx:id="appearanceCounterPane" source="../appearancecounter/AppearanceCounter.fxml" /></content> -->
                	 <content><fx:include fx:id="appearanceCounterPane" source="/whowhatwhere/view/fxmls/appearancecounter/AppearanceCounter.fxml" /></content>
                </Tab>
                <Tab fx:id="tabWatchdog" closable="false" text="Watchdog">
                	<!-- <content><fx:include fx:id="watchdogTab" source="../watchdog/Watchdog.fxml" /></content>-->
                	<content><fx:include fx:id="watchdogPane" source="/whowhatwhere/view/fxmls/watchdog/Watchdog.fxml" /></content> 
                </Tab>
                <Tab fx:id="tabUtils" closable="false" text="Utilities">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TitledPane animated="false" collapsible="false" layoutX="14.0" layoutY="14.0" prefHeight="145.0" prefWidth="586.0" text="Quick ping">
                              	<!-- <content><fx:include fx:id="quickPingPane" source="../utilities/QuickPing.fxml" /></content>-->
                              	<content><fx:include fx:id="quickPingPane" source="/whowhatwhere/view/fxmls/utilities/QuickPing.fxml" /></content>
                              </TitledPane>
                              <TitledPane animated="false" collapsible="false" layoutX="14.0" layoutY="175.0" prefHeight="78.0" prefWidth="586.0" text="Visual Trace">
                              	<!--<content><fx:include fx:id="tracePane" source="../utilities/Trace.fxml" /></content>-->
                              	 <content><fx:include fx:id="tracePane" source="/whowhatwhere/view/fxmls/utilities/Trace.fxml" /> </content>
                              </TitledPane>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </center>
         <bottom>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
	               <Button fx:id="btnExit" mnemonicParsing="false" prefHeight="29.0" prefWidth="75.0" text="Exit" AnchorPane.rightAnchor="0.0" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </AnchorPane>
         </bottom>
      </BorderPane>
   </content>
</ScrollPane>
